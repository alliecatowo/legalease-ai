# Copy this file to docker/.env.auth and adjust secrets for your environment
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_HOSTNAME=auth.localhost
KEYCLOAK_DB_NAME=legalease
KEYCLOAK_DB_SCHEMA=keycloak
KEYCLOAK_DB_USER=legalease
KEYCLOAK_DB_PASSWORD=legalease_dev
KEYCLOAK_FRONTEND_CLIENT_ID=nuxt-dashboard
KEYCLOAK_BACKEND_CLIENT_ID=fastapi-backend
KEYCLOAK_BACKEND_CLIENT_SECRET=change-me
KEYCLOAK_REALM=legalease
NUXT_SESSION_NAME=legalease-session
NUXT_SESSION_PASSWORD=please-change-this-session-password-32-chars
NUXT_PUBLIC_APP_URL=https://app.localhost
NUXT_PUBLIC_KEYCLOAK_URL=https://auth.localhost
NUXT_PUBLIC_KEYCLOAK_REALM=legalease
NUXT_PUBLIC_KEYCLOAK_CLIENT_ID=nuxt-dashboard
NUXT_PUBLIC_KEYCLOAK_REDIRECT_URI=https://app.localhost/api/auth/callback
NUXT_PUBLIC_API_BASE=https://api.localhost

# Internal URLs for server-side container-to-container communication
NUXT_API_BASE_INTERNAL=http://backend:8000

# Keycloak URL Configuration
# KEYCLOAK_PUBLIC_URL: Public-facing URL for Keycloak (used in token issuer validation)
# Must match what Keycloak advertises in tokens (issuer URL)
KEYCLOAK_PUBLIC_URL=http://auth.localhost:8080

# KEYCLOAK_INTERNAL_URL: Internal container-to-container URL for fetching JWKS
KEYCLOAK_INTERNAL_URL=http://keycloak:8080

# KEYCLOAK_BASE_URL: Legacy/alias for internal URL (kept for backwards compatibility)
KEYCLOAK_BASE_URL=http://keycloak:8080
