# LegalEase Environment Variables
# Copy this file to .env and update the values for your environment

# ============================================
# Application Settings
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-this-in-production

# API base URL for frontend
NUXT_PUBLIC_API_BASE=http://localhost:8000

# ============================================
# Database Configuration
# ============================================

# PostgreSQL connection URL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/legalease

# Database pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================
# Redis Configuration
# ============================================

# Redis connection URL
REDIS_URL=redis://localhost:6379/0

# Redis cache TTL (seconds)
REDIS_CACHE_TTL=3600

# ============================================
# Vector Database (Qdrant)
# ============================================

# Qdrant server URL
QDRANT_URL=http://localhost:6333

# Qdrant API key (optional, for cloud deployment)
QDRANT_API_KEY=

# Collection names
QDRANT_COLLECTION_DOCUMENTS=legal_documents
QDRANT_COLLECTION_CASES=legal_cases

# ============================================
# Object Storage (MinIO)
# ============================================

# MinIO endpoint (without http://)
MINIO_ENDPOINT=localhost:9000

# MinIO credentials
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# MinIO bucket names
MINIO_BUCKET_DOCUMENTS=documents
MINIO_BUCKET_EVIDENCE=evidence
MINIO_BUCKET_EXPORTS=exports

# Use SSL for MinIO (true/false)
MINIO_USE_SSL=false

# ============================================
# Graph Database (Neo4j)
# ============================================

# Neo4j connection URI
NEO4J_URI=bolt://localhost:7687

# Neo4j credentials
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Neo4j database name
NEO4J_DATABASE=neo4j

# ============================================
# AI/ML Services
# ============================================

# Ollama base URL
OLLAMA_BASE_URL=http://localhost:11434

# Default LLM model
OLLAMA_MODEL=llama3.1:70b

# NuExtract model for structured extraction
NUEXTRACT_MODEL=nuextract

# LLaVA model for video analysis
LLAVA_MODEL=llava:13b

# Whisper model for audio transcription
WHISPER_MODEL=medium

# Embedding model
EMBEDDING_MODEL=BAAI/bge-base-en-v1.5

# OpenAI API key (optional, for GPT models)
OPENAI_API_KEY=

# ============================================
# Celery Configuration
# ============================================

# Celery broker URL (uses Redis)
CELERY_BROKER_URL=redis://localhost:6379/1

# Celery result backend (uses Redis)
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================
# Email Configuration
# ============================================

# SMTP server settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email sender
EMAIL_FROM=noreply@legalease.com
EMAIL_FROM_NAME=LegalEase

# ============================================
# Authentication
# ============================================

# JWT settings
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 settings (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================
# File Upload Settings
# ============================================

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE_MB=100

# Allowed file extensions
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,png,jpg,jpeg,mp4,mp3,wav

# ============================================
# CORS Settings
# ============================================

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# Logging
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/legalease.log

# ============================================
# Rate Limiting
# ============================================

# Rate limit for API requests (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Feature Flags
# ============================================

# Enable video analysis
FEATURE_VIDEO_ANALYSIS=true

# Enable audio transcription
FEATURE_AUDIO_TRANSCRIPTION=true

# Enable knowledge graph
FEATURE_KNOWLEDGE_GRAPH=true

# Enable AI case prediction
FEATURE_AI_PREDICTION=true

# ============================================
# Monitoring (optional)
# ============================================

# Sentry DSN for error tracking
SENTRY_DSN=

# New Relic license key
NEW_RELIC_LICENSE_KEY=

# ============================================
# Development Settings
# ============================================

# Reload on code changes (development only)
RELOAD=true

# Show SQL queries in logs
SHOW_SQL_QUERIES=false

# Seed database with sample data
SEED_DATABASE=false
