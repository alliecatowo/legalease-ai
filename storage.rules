rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read/write their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Case files - accessible to authenticated users (TODO: add case-level permissions)
    match /cases/{caseId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Transcription audio/video files
    match /transcriptions/{transcriptionId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Temporary uploads (for processing)
    match /temp/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
